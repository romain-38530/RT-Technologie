# Configuration Environnement - Système de Sourcing Permanent
# Copier ce fichier vers .env et adapter les valeurs

# Mode d'exécution (development, production)
FLASK_ENV=production
FLASK_DEBUG=False

# Clé secrète Flask (GÉNÉRER UNE NOUVELLE CLÉ EN PRODUCTION!)
# Générer avec: python -c 'import secrets; print(secrets.token_hex(32))'
SECRET_KEY=CHANGEZ_CETTE_CLE_EN_PRODUCTION_UTILISEZ_SECRETS_TOKEN_HEX

# Hôte et port
HOST=0.0.0.0
PORT=8000

# Base de données (si utilisation PostgreSQL)
# DATABASE_URL=postgresql://user:password@localhost:5432/sourcing_db

# Localisation par défaut (latitude, longitude)
# Lyon
DEFAULT_LOCATION_LAT=45.7640
DEFAULT_LOCATION_LON=4.8357

# Paramètres de recherche
DEFAULT_SEARCH_RADIUS_KM=500

# Logs
LOG_LEVEL=INFO
LOG_FILE=/var/log/sourcing-system/app.log

# Sécurité
# Autoriser CORS (pour accès depuis d'autres domaines)
CORS_ENABLED=False
CORS_ORIGINS=http://localhost:3000

# Authentification (à implémenter)
AUTH_ENABLED=False
# JWT_SECRET_KEY=CHANGEZ_CETTE_CLE_AUSSI

# Limites de taux (rate limiting)
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60

# Cache
CACHE_ENABLED=True
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300

# Email (pour notifications - optionnel)
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=votre-email@example.com
# SMTP_PASSWORD=votre-mot-de-passe
# EMAIL_FROM=noreply@votre-domaine.com

# Monitoring (optionnel)
# SENTRY_DSN=https://...@sentry.io/...
