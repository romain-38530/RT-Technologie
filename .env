# Copiez en .env (ne pas committer .env)

# Mailgun
MAILGUN_DOMAIN=sandboxXXXX.mailgun.org
MAILGUN_API_KEY=key-xxxxxxxxxxxxxxxxxxxxxxxxxxxx
MAIL_FROM="RT Technologie <no-reply@votre-domaine.fr>"

# Notifications service
NOTIFICATIONS_PORT=3002
NOTIFICATIONS_URL=https://notifications.rt-technologie.com
DISPATCH_NOTIFY_TO=dev@example.com
INDUSTRY_NOTIFY_TO=industry@example.com
PLANNING_NOTIFY_TO=dev@example.com
PLANNING_PORT=3004

# OpenRouter (LLM)
OPENROUTER_API_KEY=sk-or-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_MODEL=openai/gpt-4o-mini
OPENROUTER_PROJECT=RT-Technologie
OPENROUTER_REFERER=https://www.rt-technologie.com

# VAT Check API
VATCHECK_API_KEY=vat_live_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
VATCHECK_BASE_URL=https://app.vatcheckapi.com
VATCHECK_PATH=/api/validate

# Vigilance (Core Orders)
VIGILANCE_URL=https://vigilance.rt-technologie.com
VIGILANCE_TTL_MS=300000

# AuthZ (inscription & auth)
AUTHZ_PORT=3007
AUTHZ_JWT_SECRET=dev-secret
AUTHZ_VERIFY_BASE_URL=https://authz.rt-technologie.com
AUTHZ_URL=https://authz.rt-technologie.com
ENTITLEMENTS_TTL_MS=300000
AUTHZ_ADMIN_API_KEY=change-me-admin-key

# Security
SECURITY_ENFORCE=false
INTERNAL_SERVICE_TOKEN=change-me-strong-token

# CORS (front autoris√©)
CORS_ALLOW_ORIGIN=https://www.rt-technologie.com

# MongoDB (optional)
MONGODB_URI=mongodb+srv://user:pass@cluster0.xxxxxx.mongodb.net
MONGODB_DB=rt
MONGODB_ATLAS_PUBLIC_KEY=
MONGODB_ATLAS_PRIVATE_KEY=
MONGODB_ATLAS_PROJECT_ID=
MONGODB_ATLAS_IP=0.0.0.0/0
MONGODB_ATLAS_DB_USERNAME=app_user
MONGODB_ATLAS_DB_PASSWORD=change-me-strong

# AWS (optional; prefer environment/credentials store, do not commit real keys)
AWS_ACCESS_KEY_ID=AKIAxxxxxxxxxxxxxxxx
AWS_SECRET_ACCESS_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
AWS_REGION=eu-west-3
AWS_S3_BUCKET=rt-dev-docs
NOTIFICATIONS_SES_FROM="RT Technologie <no-reply@example.com>"

# Services base URLs for Admin Gateway health (optional overrides)
CORE_ORDERS_URL=https://core-orders.rt-technologie.com
PLANNING_URL=https://planning.rt-technologie.com
VIGILANCE_URL=https://vigilance.rt-technologie.com
NOTIFICATIONS_URL=https://notifications.rt-technologie.com
ECPMR_URL=https://ecpmr.rt-technologie.com

# Front (Backoffice)
NEXT_PUBLIC_ADMIN_GATEWAY_URL=https://admin-gateway.rt-technologie.com
NEXT_PUBLIC_AUTHZ_URL=https://authz.rt-technologie.com
NEXT_PUBLIC_SUPPORT_URL=https://www.rt-technologie.com

# Support (Notifications footer)
SUPPORT_EMAIL=support@rt-technologie.com
