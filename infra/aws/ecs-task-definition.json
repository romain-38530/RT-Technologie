{
  "family": "rt-client-onboarding",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::YOUR_ACCOUNT_ID:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::YOUR_ACCOUNT_ID:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "client-onboarding",
      "image": "YOUR_ACCOUNT_ID.dkr.ecr.eu-west-1.amazonaws.com/rt-client-onboarding:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 3020,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "PORT",
          "value": "3020"
        }
      ],
      "secrets": [
        {
          "name": "MONGODB_URI",
          "valueFrom": "arn:aws:secretsmanager:eu-west-1:YOUR_ACCOUNT_ID:secret:rt/client-onboarding/mongodb-uri"
        },
        {
          "name": "JWT_SECRET",
          "valueFrom": "arn:aws:secretsmanager:eu-west-1:YOUR_ACCOUNT_ID:secret:rt/client-onboarding/jwt-secret"
        },
        {
          "name": "INTERNAL_SERVICE_TOKEN",
          "valueFrom": "arn:aws:secretsmanager:eu-west-1:YOUR_ACCOUNT_ID:secret:rt/client-onboarding/internal-token"
        },
        {
          "name": "SESSION_SECRET",
          "valueFrom": "arn:aws:secretsmanager:eu-west-1:YOUR_ACCOUNT_ID:secret:rt/client-onboarding/session-secret"
        },
        {
          "name": "SMTP_HOST",
          "valueFrom": "arn:aws:secretsmanager:eu-west-1:YOUR_ACCOUNT_ID:secret:rt/client-onboarding/smtp-host"
        },
        {
          "name": "SMTP_PORT",
          "valueFrom": "arn:aws:secretsmanager:eu-west-1:YOUR_ACCOUNT_ID:secret:rt/client-onboarding/smtp-port"
        },
        {
          "name": "SMTP_USER",
          "valueFrom": "arn:aws:secretsmanager:eu-west-1:YOUR_ACCOUNT_ID:secret:rt/client-onboarding/smtp-user"
        },
        {
          "name": "SMTP_PASSWORD",
          "valueFrom": "arn:aws:secretsmanager:eu-west-1:YOUR_ACCOUNT_ID:secret:rt/client-onboarding/smtp-password"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/rt-client-onboarding",
          "awslogs-region": "eu-west-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "node -e \"require('http').get('http://localhost:3020/health', (r) => {process.exit(r.statusCode === 200 ? 0 : 1)})\""
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}
