# =============================================================================
# RT-Technologie - Configuration Production
# Service: Client Onboarding
# =============================================================================

# Service Configuration
NODE_ENV=production
PORT=3020

# MongoDB Atlas (Production)
MONGODB_URI=mongodb+srv://rt_admin:<PASSWORD>@rt-cluster.mongodb.net/rt_technologie?retryWrites=true&w=majority

# JWT & Security
JWT_SECRET=<GENERATE_WITH_openssl_rand_-hex_32>
INTERNAL_SERVICE_TOKEN=<GENERATE_WITH_openssl_rand_-hex_32>

# SMTP Configuration (Production)
# Option 1: Gmail (si compte GSuite/Workspace)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@rt-technologie.com
SMTP_PASSWORD=<APP_PASSWORD>

# Option 2: SendGrid
# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_USER=apikey
# SMTP_PASSWORD=<SENDGRID_API_KEY>

# Option 3: Amazon SES
# SMTP_HOST=email-smtp.eu-west-1.amazonaws.com
# SMTP_PORT=587
# SMTP_USER=<AWS_SMTP_USER>
# SMTP_PASSWORD=<AWS_SMTP_PASSWORD>

# Application URLs
APP_URL=https://app.rt-technologie.com
MARKETING_URL=https://www.rt-technologie.com

# API Keys (optionnel)
# API Entreprise (pour avoir plus de quota)
ENTREPRISE_API_KEY=

# Monitoring & Logs
LOG_LEVEL=info
SENTRY_DSN=

# Email Templates
EMAIL_FROM=RT Technologie <noreply@rt-technologie.com>
EMAIL_REPLY_TO=contact@rt-technologie.com
EMAIL_SUPPORT=support@rt-technologie.com

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/png,image/jpeg,application/pdf

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session
SESSION_SECRET=<GENERATE_WITH_openssl_rand_-hex_32>
SESSION_COOKIE_DOMAIN=.rt-technologie.com
SESSION_COOKIE_SECURE=true
