# ===================================
# RT-Technologie - Core Orders Service
# ===================================

# Port du service
PORT=3007

# ===================================
# SECURITY
# ===================================

# Mode sécurité (true = authentification obligatoire, false = optionnelle)
SECURITY_ENFORCE=false

# Token partagé pour les communications inter-services
# IMPORTANT: Doit être identique sur tous les services
# En production: Générer avec `openssl rand -hex 32`
INTERNAL_SERVICE_TOKEN=dev-token-change-in-production

# ===================================
# DATABASE
# ===================================

# MongoDB connection string (optionnel, fallback sur seeds)
MONGODB_URI=mongodb://localhost:27017/rt-technologie

# ===================================
# SERVICES DEPENDENCIES
# ===================================

# Service d'authentification et autorisation
AUTHZ_URL=http://localhost:3002

# Service de vigilance des transporteurs
VIGILANCE_URL=http://localhost:3008
VIGILANCE_TTL_MS=300000

# Service d'affrètement IA
AFFRET_IA_URL=http://localhost:3010
# Liste des organisations autorisées à utiliser Affret.IA (comma-separated, vide = tous)
AFFRET_IA_ALLOWED_ORGS=
# Requiert l'addon affret-ia dans le plan (true/false)
AFFRET_IA_REQUIRE_ADDON=true

# Service de planning (créneaux RDV)
PLANNING_URL=http://localhost:3005

# Service de géolocalisation
GEO_TRACKING_URL=http://localhost:3016

# ===================================
# NOTIFICATIONS
# ===================================

# Email pour les notifications dispatch
DISPATCH_NOTIFY_TO=dispatch@example.com

# Email pour les notifications industriel
INDUSTRY_NOTIFY_TO=industry@example.com

# ===================================
# BUSINESS LOGIC
# ===================================

# SLA par défaut pour l'acceptation des missions (en heures)
DEFAULT_SLA_ACCEPT_HOURS=2

# ===================================
# MONITORING & LOGGING
# ===================================

# Niveau de log (debug, info, warn, error)
LOG_LEVEL=info

# Activer les logs structurés JSON
LOG_JSON=false

# ===================================
# ENVIRONMENT
# ===================================

# Environnement (development, staging, production)
NODE_ENV=development
