# RT Technologie Chatbot Service - Environment Variables
# Copiez ce fichier vers .env et configurez les valeurs

# ======================
# Server Configuration
# ======================
PORT=3019
NODE_ENV=development

# ======================
# Database
# ======================
# MongoDB (optionnel, fallback in-memory si non configuré)
MONGODB_URI=mongodb://localhost:27017/rt-technologie

# ======================
# AI Providers
# ======================
# OpenAI GPT-4
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4-turbo-preview

# Anthropic Claude
ANTHROPIC_API_KEY=sk-ant-...
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# Modèle interne RT (optionnel)
INTERNAL_AI_MODEL_URL=http://localhost:8080/ai/generate

# ======================
# Microsoft Teams Integration
# ======================
TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/your-webhook-id
TEAMS_BOT_TOKEN=your-bot-token

# ======================
# RT Technologie Services URLs
# ======================
CORE_ORDERS_URL=http://localhost:3001
ERP_SYNC_URL=http://localhost:3004
TMS_SYNC_URL=http://localhost:3009
WMS_SYNC_URL=http://localhost:3005
TRACKING_IA_URL=http://localhost:3002
AFFRET_IA_URL=http://localhost:3011
VIGILANCE_URL=http://localhost:3012
NOTIFICATIONS_URL=http://localhost:3008
ECPMR_URL=http://localhost:3015
AUTHZ_URL=http://localhost:3013

# ======================
# Dashboard & Frontend
# ======================
DASHBOARD_URL=https://admin.rt-technologie.com

# ======================
# Security
# ======================
# Enforce authentication (true/false)
SECURITY_ENFORCE=false

# Internal service token for service-to-service communication
INTERNAL_SERVICE_TOKEN=your-secret-service-token

# ======================
# Diagnostics Configuration
# ======================
# Vigilance cache TTL in milliseconds (default: 5 minutes)
VIGILANCE_TTL_MS=300000

# ======================
# Notifications
# ======================
# Email for dispatch notifications
DISPATCH_NOTIFY_TO=dispatch@rt-technologie.com
INDUSTRY_NOTIFY_TO=industry@rt-technologie.com

# ======================
# Feature Flags
# ======================
# Enable/disable specific features
ENABLE_WEBSOCKET=true
ENABLE_DIAGNOSTICS=true
ENABLE_TEAMS_INTEGRATION=true
ENABLE_AI_RESPONSES=true

# ======================
# Logging & Monitoring
# ======================
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
